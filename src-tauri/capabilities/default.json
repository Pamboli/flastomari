{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "store:default",
    "audio-recorder:default",
    "core:path:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    }
  ]
}